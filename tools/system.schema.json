{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "FoundryVTT System Manifest",
  "type": "object",
  "required": [
    "id",
    "version",
    "title",
    "description",
    "url",
    "manifest",
    "download",
    "compatibility",
    "languages"
  ],
  "properties": {
    "id": { "type": "string", "minLength": 1 },
    "version": { "type": "string", "minLength": 1 },
    "title": { "type": "string" },
    "description": { "type": "string" },
    "url": { "type": "string", "format": "uri" },
    "bugs": { "type": "string" },
    "manifest": { "type": "string", "format": "uri" },
    "download": { "type": "string", "format": "uri" },
    "license": { "type": "string" },
    "flags": { "type": "object" },
    "esmodules": {
      "type": "array",
      "items": { "type": "string" }
    },
    "styles": {
      "type": "array",
      "items": { "type": "string" }
    },
    "languages": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["lang", "name", "path"],
        "properties": {
          "lang": { "type": "string" },
          "name": { "type": "string" },
          "path": { "type": "string" }
        }
      }
    },
    "compatibility": {
      "type": "object",
      "required": ["minimum"],
      "properties": {
        "minimum": { "type": ["integer", "string"] },
        "verified": { "type": ["integer", "string"] }
      }
    }
  },
  "additionalProperties": true
}
