 <div class="define-item-type item anarchy-cyberdeck {{#if system.inactive}}inactive{{/if}}" data-item-id="{{_id}}" data-item-type="cyberdeck">
  <img class="anarchy-img item-img" src="{{img}}" alt="{{name}}" data-tooltip="{{name}}"/>
  <div class="item-content">
    <div class="cyberdeck-details">
      <label>{{name}}</label>
      <label>{{localize 'ANARCHY.item.cyberdeck.programs'}} {{system.programs}}</label>
      <label>{{localize 'ANARCHY.item.cyberdeck.processing'}} {{system.processing}}</label>
    </div>
    {{> "systems/anarchy/templates/actor/parts/item-attribute.hbs" attribute=system.attributes.firewall key='firewall'}}
    {{> 'systems/anarchy/templates/actor/parts/matrix-cyberdeck.hbs'}}

    <label>
      {{>'systems/anarchy/templates/actor/character/description.hbs' description=system.description}}
    </label>
  </div>
  <div class="item-controls">
    {{> 'systems/anarchy/templates/common/control-connectionMode.hbs' connectionMode=system.connectionMode}}
    {{> 'systems/anarchy/templates/common/item-controls.hbs'}}
  </div>
</div>
