{
  "scripts": {
    "build": "npx vite build",
    "run": "npx vite serve",
    "packCompendiumsToDist": "node ./tools/packCompendiumsToDist.mjs",
    "packCompendiumsToPublic": "node -e \"import('./tools/CompendiumsManager.mjs').then(m=>m.CompendiumsManager.packToDistDir('src/packs','public/packs','yaml'))\"",
    "unpackCompendiumsFromPublic": "node -e \"import('./tools/CompendiumsManager.mjs').then(m=>m.CompendiumsManager.unpackToSrcDir('src/packs','public/packs','yaml'))\"",
    "import:anarchy-md": "node ./tools/importAnarchyMarkdown.mjs",
    "clean": "rimraf dist public/packs",
    "postbuild": "cp -r dist/* public/",
    "validate:i18n": "node ./tools/validateI18n.mjs",
    "validate:system": "node ./tools/validateSystemJson.mjs",
    "validate": "npm run validate:system && npm run validate:i18n"
  },
  "devDependencies": {
    "@foundryvtt/foundryvtt-cli": "^1.0.3",
    "@league-of-foundry-developers/foundry-vtt-types": "^9.280.0",
    "nodemon": "^3.1.2",
    "sass": "^1.77.4",
    "vite": "^5.2.12"
  },
  "dependencies": {
    "rollup-plugin-visualizer": "^5.12.0",
    "yaml": "^2.5.0"
  }
}
