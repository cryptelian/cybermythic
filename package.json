{
  "scripts": {
    "build": "npx vite build",
    "build:styles": "sass src/styles/main.scss public/style/compiled.css --source-map --embed-sources",
    "build:styles:optimized": "sass src/styles/main.scss public/style/compiled.css --style=compressed --embed-sources",
    "build:styles:watch": "sass --watch src/styles/main.scss:public/style/compiled.css --source-map --embed-sources",
    "build:critical": "sass src/styles/build/critical.scss public/style/critical.css --style=compressed --no-source-map",
    "run": "npx vite serve",
    "dev": "concurrently \"npm run build:styles:watch\" \"npm run run\"",
    "packCompendiumsToDist": "node ./tools/packCompendiumsToDist.mjs",
    "packCompendiumsToPublic": "node ./tools/packCompendiumsToPublic.mjs",
    "unpackCompendiumsFromPublic": "node ./tools/unpackCompendiumsFromPublic.mjs",
    "build:main": "npx vite build",
    "dev:main": "npx vite serve",
    "build:ninja": "VITE_SYSTEM_ID=ninjanarchy vite build --mode ninja && node ./tools/rewriteSystemJson.mjs && node ./tools/packCompendiumsWithRewrite.mjs",
    "build:ninja:to": "OUT_DIR=$OUT_DIR VITE_SYSTEM_ID=${VITE_SYSTEM_ID:-ninjanarchy} vite build --mode ninja && OUT_DIR=$OUT_DIR node ./tools/rewriteSystemJson.mjs && OUT_DIR=$OUT_DIR node ./tools/packCompendiumsWithRewrite.mjs",
    "dev:ninja": "VITE_SYSTEM_ID=ninjanarchy vite serve --mode ninja",
    "lint": "eslint \"src/**/*.js\" \"public/**/*.mjs\"",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "stylelint": "stylelint \"src/styles/**/*.scss\"",
    "stylelint:fix": "stylelint \"src/styles/**/*.scss\" --fix",
    "lint:css": "stylelint \"src/**/*.scss\"",
    "lint:css:fix": "stylelint \"src/**/*.scss\" --fix",
    "analyze:styles": "node src/tools/style-analyzer.js",
    "docs:generate": "node src/tools/style-docs-generator.js",
    "test:styles": "npm run stylelint && npm run build:styles && npm run analyze:styles",
    "dev:full": "concurrently \"npm run build:styles:watch\" \"npm run stylelint -- --watch\" \"npm run run\"",
    "validate:all": "npm run lint && npm run stylelint && npm run build:styles && npm run build:critical",
    "validate:system": "node ./tools/validateSystemJson.mjs",
    "validate:i18n": "node ./tools/validateI18n.mjs",
    "validate": "npm run validate:system && npm run validate:i18n",
    "qa:test": "node src/tools/qa-testing.js",
    "qa:full": "npm run validate:all && npm run qa:test",
    "metrics:baseline": "node ./tools/metrics-baseline.mjs",
    "metrics:ci": "node ./tools/metrics-baseline.mjs --skip-build",
    "lint:styles": "stylelint \"src/**/*.scss\"",
    "lint:styles:fix": "stylelint \"src/**/*.scss\" --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:visual": "npm run -s build && playwright test",
    "test:visual:update": "npm run -s build && playwright test --update-snapshots",
    "release:prepare": "node ./tools/prepareRelease.mjs --repo VincentVk9373/anarchy --version v$npm_package_version",
    "ci": "npm run format:check && npm run lint:css && npm run validate && npm run -s build && npm test",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@foundryvtt/foundryvtt-cli": "^1.0.3",
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "@league-of-foundry-developers/foundry-vtt-types": "^9.280.0",
    "@playwright/test": "^1.47.2",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "archiver": "^7.0.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2",
    "cssnano": "^6.1.2",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.7",
    "nodemon": "^3.1.2",
    "postcss": "^8.4.47",
    "postcss-load-config": "^5.1.0",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.3.3",
    "sass": "^1.77.4",
    "stylelint": "^16.8.1",
    "stylelint-config-clean-order": "^5.4.1",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-standard-scss": "^13.0.0",
    "stylelint-order": "^6.0.4",
    "stylelint-scss": "^6.5.0",
    "vite": "^5.2.12",
    "vitest": "^2.0.5",
    "yaml": "^2.8.1"
  },
  "dependencies": {
    "rg": "^0.0.2",
    "rollup-plugin-visualizer": "^5.12.0",
    "yaml": "^2.6.1"
  },
  "overrides": {
    "socket.io-parser": "^4.2.3",
    "socket.io-client": "^4.7.5",
    "ws": "^8.17.1",
    "engine.io-client": "^6.5.4",
    "tinymce": "^6.8.6"
  }
}
