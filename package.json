{
  "scripts": {
    "build": "npx vite build",
    "build:styles": "sass src/styles/main.scss:public/style/compiled.css --source-map",
    "build:styles:watch": "sass src/styles/main.scss:public/style/compiled.css --source-map --watch",
    "run": "npx vite serve",
    "dev": "concurrently \"npm run build:styles:watch\" \"npm run run\"",
    "packCompendiumsToDist": "node ./tools/packCompendiumsToDist.mjs",
    "packCompendiumsToPublic": "node ./tools/packCompendiumsToPublic.mjs",
    "unpackCompendiumsFromPublic": "node ./tools/unpackCompendiumsFromPublic.mjs",
    "build:ninja": "VITE_SYSTEM_ID=ninjanarchy OUT_DIR=dist-ninja npx vite build && VITE_SYSTEM_ID=ninjanarchy OUT_DIR=dist-ninja node ./tools/rewriteSystemJson.mjs && VITE_SYSTEM_ID=ninjanarchy OUT_DIR=dist-ninja node ./tools/packCompendiumsWithRewrite.mjs",
    "dev:ninja": "VITE_SYSTEM_ID=ninjanarchy npx vite serve",
    "lint": "eslint \"src/**/*.js\" \"public/**/*.mjs\"",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier -w \"{src,public}/**/*.{js,mjs,css,scss,json,md}\"",
    "stylelint": "stylelint \"src/styles/**/*.scss\"",
    "stylelint:fix": "stylelint \"src/styles/**/*.scss\" --fix"
  },
  "devDependencies": {
    "@foundryvtt/foundryvtt-cli": "^1.0.3",
    "@league-of-foundry-developers/foundry-vtt-types": "^9.280.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "nodemon": "^3.1.2",
    "prettier": "^3.3.2",
    "sass": "^1.77.4",
    "stylelint": "^16.6.1",
    "stylelint-config-standard-scss": "^13.0.0",
    "stylelint-scss": "^6.5.0",
    "vite": "^5.2.12"
  },
  "dependencies": {
    "rollup-plugin-visualizer": "^5.12.0"
  }
}
